
       <div class="container">
         <div class="text-center">
        <h1>UserList</h1>
        <hr>
           </div>
         <div class="text-right my-3">
      <a class="btn btn-primary" role="button" href="/user/new">Sign in</a><br><hr>
            </div>
               <table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">pwd</th>
      <th scope="col">e-maii</th>
      <th scope="col">date</th>
      <th scope="col">view</th>
    </tr>
  </thead>
  <tbody>
        <% @user.each do |p| %>
        <tr>
        <th scope="row"><%=p.id %></th>
        <td><%=p.name %></td>
        <td><%=p.password %></td>
        <td><%=p.email%></td>
        <td><%=p.created_at%></td>
        <td><a href="user/<%=p.id %>">link</a></td>
        </tr>
        <% end%>
  </tbody>
</table>
        
        
</div>