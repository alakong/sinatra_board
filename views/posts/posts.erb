
       <div class="container">
        <h1>게시판입니다.</h1>
        <hr>
        <a href="/posts/new">글 쓰러가기</a><br><hr>
       
               <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
        <% @posts.each do |p| %>
        <tr>
        <th scope="row"><%=p.id %></th>
        <td><%=p.title %></td>
        <td><%=p.body %></td>
        <td><%=p.created_at %></td>
        </tr>
        <% end%>
  </tbody>
</table>
        
        
</div>