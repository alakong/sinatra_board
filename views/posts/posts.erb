
       <div class="container">
         <div class="text-center">
        <h1>게시판입니다.</h1>
        <hr>
           </div>
         <div class="text-right my-3">
      <a class="btn btn-primary" role="button" href="/posts/new">글 쓰러가기</a><br><hr>
            </div>
               <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Date</th>
      <th scope="col">View</th>
    </tr>
  </thead>
  <tbody>
        <% @posts.each do |p| %>
        <tr>
        <th scope="row"><%=p.id %></th>
        <td><%=p.title %></td>
        <td><%=p.body %></td>
        <td><%=p.created_at %></td>
        <td><a href="posts/<%=p.id %>">link</a></td>
        </tr>
        <% end%>
  </tbody>
</table>
        
        
</div>